@model PointOfSale.Models.Category

@{
    ViewBag.Title = "CategoryEdit";
}
 @Html.AntiForgeryToken()

<div class="container card border-bottom-primary shadow-lg p-3 mb-5 bg-body rounded-3 w-50 p-3">
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger">
            <strong>@ViewBag.Message</strong>
        </div>
    }
<form class="row g-3 needs-validation" novalidate enctype="multipart/form-data" method="post" action="@Url.Action("CategoryEdit","Home")">

    <div class="col-12">
        <h3>
            Edit Category
        </h3>
    </div>
    <hr />
    @Html.HiddenFor(model => model.CategoryId)

    <div class="col-12">
        <label for="validationCustom01" class="form-label">Category Name</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control h-25 p-3", required = "required" } })
        <div class="valid-feedback">
            Looks good!
        </div>
        <div class="invalid-feedback">
            Please enter Category name.
        </div>
    </div>
    <div class="col-md-2">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
    <div class="col-md-2">
        <div class="btn btn-danger">
            <a href="@Url.Action("Category", "Home")" style="text-decoration:none;color:white;">Cancel</a>
        </div>
    </div>
</form>
    
</div>

    <script>
        // formvalidation
        (function () {
            'use strict'


            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })();
        setTimeout(function () { $(".alert").css('display', 'none'); }, 5000);
    </script>
